# Database connection string - use PostgreSQL for production
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="postgresql://username:password@hostname:5432/database_name"

# For development with SQLite, uncomment this line:
# DATABASE_URL="file:./dev.db"

# Next Auth configuration
NEXTAUTH_SECRET="generate-a-secure-random-string" # Generate with: openssl rand -base64 32
NEXTAUTH_URL="http://localhost:3000" # Change to your production URL when deploying

# Node environment
NODE_ENV="development" # Change to "production" for production deployments

# App configuration
NEXT_PUBLIC_APP_URL="http://localhost:3000" # Your application URL 